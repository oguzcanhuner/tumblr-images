%html
  %head
    %title Find Images from Tumblr
    %script{src: "/javascripts/jquery.min.js"}
    %script{src: "/javascripts/main.js"}
    %link{rel: "stylesheet", href: "/css/style.css"}

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-44824332-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    %h1.heading
      search for images from tumblr
    %h2.subheading
      a small hack by 
      %a{href: "http://twitter.com/oguzcanhuner"} @oguzcanhuner
    #container
      #search
        %form{name: "search", action: "/", method: "get"}
          %input{type: "text", name: "term", value: params[:term], placeholder: "e.g. cat gifs"}
          %input.button{type: "submit", value: "search"}

      - @images.each do |image|
        %img{ src: image.url}
